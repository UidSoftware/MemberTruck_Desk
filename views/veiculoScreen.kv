# Arquivo: views/veiculoScreen.kv
#:kivy 2.0.0
#:import MDScreen kivymd.uix.screen.MDScreen
#:import MDTextField kivymd.uix.textfield.MDTextField
#:import MDButton kivymd.uix.button.MDButton
#:import MDButtonText kivymd.uix.button.MDButtonText
#:import MDBoxLayout kivymd.uix.boxlayout.MDBoxLayout
#:import dp kivy.metrics.dp
#:import MDLabel kivymd.uix.label.MDLabel

<VeiculoScreen>:
    name: 'veiculo'
    md_bg_color: app.theme_cls.backgroundColor

    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(15)

        MDLabel:
            text: 'Cadastro de Veiculos'
            halign: 'center'
            font_style: "Display"
            size_hint_y: None
            height: self.texture_size[1]
        
        MDTextField:
            id: veiculo_nomeVeic
            mode: "filled"
            pos_hint:{"center_x":0.5}
            size_hint_x:0.7
            MDTextFieldHintText:
                text:"Nome do Veiculo"
            MDTextFieldHelperText:
                text: "Digite o nome do veiculo."
                text_color: "#AFEEEE"
                mode: "persistent"

        MDTextField:
            id: veiculo_anoVeic
            mode: "filled"
            pos_hint:{"center_x":0.5}
            size_hint_x:0.7
            input_type: 'number'
            MDTextFieldHintText:
                text:"Ano"
            MDTextFieldHelperText:
                text: "Ex: XXXX"
                text_color: "#AFEEEE"
                mode: "on_focus"

        MDTextField:
            id: veiculo_placaVeic
            mode: "filled"
            pos_hint:{"center_x":0.5}
            size_hint_x:0.7
            MDTextFieldHintText:
                text:"Placa"
            MDTextFieldHelperText:
                text: "Digite a placa do veiculo"
                text_color: "#AFEEEE"
                mode: "on_focus"

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_x: 0.7
            pos_hint: {"center_x": 0.5}
            spacing: dp(10)
            size_hint_y: None
            height: dp(48)
            
            MDButton:
                style: "elevated"
                size_hint_x: 1/3
                on_release: root.controller.criar()
                MDButtonText:
                    text: "Criar"

            MDButton:
                style: "elevated"
                size_hint_x: 1/3
                on_release: root.controller.atualizar()
                MDButtonText:
                    text: "Atualizar"

            MDButton:
                style: "elevated"
                size_hint_x: 1/3
                on_release: root.controller.deletar()
                MDButtonText:
                    text: "Deletar"
